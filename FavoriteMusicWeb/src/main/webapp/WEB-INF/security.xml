<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">


	<!-- Spring 보안 관련 -->
	<security:http auto-config="true">
		<security:intercept-url pattern="/main.do"
			access="ROLE_USER" />
		<security:form-login login-page="/login.do"
			default-target-url="/main.do" authentication-failure-url="/loginFail.do" />
		<security:logout logout-success-url="/logout.do" />
	</security:http>

	<security:authentication-manager>
		<security:authentication-provider
			user-service-ref="AdminUserService" />
	</security:authentication-manager>

	<bean id="AdminUserService" class="mplanweb.music.web.admin.AdminUserService">
		<property name="maindao">
			<bean class="mplanweb.music.web.admin.MainDaoImpl">
				<property name="sqlSessionFactory" ref="sqlSessionFactory" />
			</bean>
		</property>
	</bean>

</beans>
